class Cat:
    def __init__(self, name, age, breed):
        self.name = name
        self.age = age
        self.breed = breed

    def meow(self):
        return f"{self.name} говорит: Мяу!"

    def sleep(self):
        return f"{self.name} спит."

    def eat(self, food):
        return f"{self.name} ест {food}."

    def play(self):
        return f"{self.name} играет."

